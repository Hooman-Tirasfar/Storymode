
<%= form_for(resource, :html => {:class => "form inputs-underline"}, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
<div class="container">
<div class="row">
  <div class="col-md-4 col-sm-4 col-md-offset-4 col-sm-offset-4">
    <section class="page-title">
      <h1>ثبت نام</h1>
    </section>
    <section>
  <div class="form-group">
    <%= f.label :email, 'ایمیل'%><br />
    <%= f.email_field :email, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password, 'رمز عبور (حداقل ۶ کارکتر)' %>
    <% if @minimum_password_length %>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, 'تایید رمز عبور' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="form-group center">
    <%= f.submit "ثبت نام", class: "btn btn-primary width-100" %>
  </div>

<% end %>
    </section>
    </div>
  </div>
</div>

