

<%= form_for(resource,:html => {:class => "form inputs-underline"}, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="row">
  <div class="col-md-4 col-sm-4 col-md-offset-4 col-sm-offset-4">
                    <section class="page-title">
                        <h1>ورود به حساب کاربری</h1>
                    </section>
    <section>
      <div class="form-group">
        <%= f.label :email, 'ایمیل' %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password, 'رمز عبور' %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.check_box :remember_me%>
          <%= f.label :remember_me, 'مرا بخاطر بسپار' %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "ورود", class: "btn btn-primary width-100"  %>
      </div>
    </section>
      </div>
</div>  
<% end %>
