
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, :class => "form inputs-underline" }) do |f| %>
  <%= devise_error_messages! %>
<div class="row">
    <div class="col-md-4 col-sm-4 col-md-offset-4 col-sm-offset-4">
		<section class="page-title">
            <h1>بازیابی رمز عبور</h1>
        </section>
			<section>
			  <div class="form-group">
			    <%= f.label :email %><br />
			    <%= f.email_field :email, autofocus: true, class: "form-control"  %>
			  </div>

			  <div class="form-group center">
			    <%= f.submit "ارسال توضیحات بازیابی", class: "btn btn-primary width-100" %>
			  </div>
			<% end %>

			</section>

    </div>
</div>
